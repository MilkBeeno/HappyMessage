<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_popup_conversation_to_top"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPutTop"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:gravity="center"
        android:minWidth="142dp"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        android:text="@string/common_up_top"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@color/FCFCFC_10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:gravity="center"
        android:minWidth="142dp"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        android:text="@string/chat_message_delete"
        android:textColor="@color/white"
        android:textSize="14sp" />
</androidx.appcompat.widget.LinearLayoutCompat>